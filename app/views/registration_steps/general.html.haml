.content
  .row-fluid
    .span4
      %h1 REGISTRATION

    .span8
      %ul.inline.pull-right
        %li
          %span.badge.badge-info 1
        %li
          %span.badge.badge-inverse 2
        %li
          %span.badge 3
        %li
          %span.badge 4
        %li
          %span.badge 5
        %li
          %span.badge 6
        %li
          %span.badge CONFIRM
  .row-fluid
    .span12{style: 'margin-bottom: 40px;'}
      %h4 NEW LISTING
      %p
        Fill out...
  .row-fluid
    .span12
      = simple_form_for(@user, url: wizard_path, :html => {:class => 'form-horizontal' }) do |f|
        = f.input :company_name
        = f.input :sub_company_name
        = f.input :address_1
        = f.input :address_2
        = f.input :city
        = f.input :state
        = f.input :zip
        .control-group
          .controls
            = country_select("user", "country", [ "United States" ])
        %hr
        = f.input :website
        = f.input :phone_1
        = f.input :phone_2
        = f.input :fax
        .form-actions
          %button.btn.btn-primary.pull-right
            Continue
            %i.icon-arrow-right