- content_for :title, "Step 4: Category Selection"
-#- content_for :description, ""
-#- content_for :keywords, ""
- content_for :head do
  = javascript_include_tag "add_fields"

.content
  .row-fluid
    .span4
      %h1 REGISTRATION

    .span8
      .span6.pull-right
        %ul.inline.steps
          %li
            %span.badge.badge-info 1
          %li
            %span.badge.badge-info 2
          %li
            %span.badge.badge-info 3
          %li
            %span.badge.badge-info 4
          %li
            %span.badge.badge-inverse 5
          %li
            %span.badge 6
          %li
            %span.badge CONFIRM
      .span2.pull-right
        %h3.pull-right STEP

  .row-fluid
    .span12{style: 'margin-bottom: 40px;'}
      = simple_form_for(@user, url: wizard_path, :html => {:class => 'form-horizontal' }) do |f|
        %h4 EQUIPMENT SALES CATEGORIES
        %p Choose equipment, materials...
        - @equipment_categories = Category.where(category_type: 'Equipment')
        - @service_categories = Category.where(category_type: 'Service')
        - @material_categories = Category.where(category_type: 'Material')

        %h5 EQUIPMENT CATEGORIES
        = hidden_field_tag "user[category_ids][]", nil
        - @equipment_categories.each do |category|
          = check_box "user[category_ids]", category.id
          = label_tag dom_id(category), category.name

        %h5 MATERIALS CATEGORIES
        %p Choose materials...
        = hidden_field_tag "user[category_ids][]", nil
        - @material_categories.each do |category|
          = check_box "user[category_ids]", category.id
          = label_tag dom_id(category), category.name

        %h5 SERVICE CATEGORIES
        %p Choose services...
        = hidden_field_tag "user[category_ids][]", nil
        - @service_categories.each do |category|
          = check_box "user[category_ids]", category.id
          = label_tag dom_id(category), category.name



      .form-actions
        = link_to 'Continue', wizard_path(:print_and_online_selections), class: 'btn btn-primary pull-right'
        -#%button.btn.btn-primary.pull-right
        -#  Continue
        -#  %i.icon-arrow-right
