.row
  .span12{style: 'margin-bottom: 40px;'}
    %h4 SELECT LOGO PACKAGE: PRINT
    %p
      The Metals Directory gives your company....
.row
  .span6
    = simple_form_for(@user, url: wizard_path) do |f|
      = f.input :logo_package_id, collection: LogoPackage.all.sort_by(&:price_cents)
      = f.input :logo
      = f.submit "Continue"
  .span6
    .thumbnail
      logo
      %h5= @user.company_name
      %p
        = @user.address_1
        = @user.address_2
      %p
        P:
        = @user.phone_1
        F:
        = @user.fax
      %p= @user.website