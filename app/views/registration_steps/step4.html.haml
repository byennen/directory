- content_for :title, "Step 4: Category Selection"
-#- content_for :description, ""
-#- content_for :keywords, ""
- content_for :head do
  = javascript_include_tag "add_fields"

.content
  .row-fluid
    .span4
      %h1 REGISTRATION

    .span8
      %ul.inline.pull-right
        %li
          %span.badge.badge-info 1
        %li
          %span.badge.badge-info 2
        %li
          %span.badge.badge-info 3
        %li
          %span.badge.badge-inverse 4
        %li
          %span.badge 5
        %li
          %span.badge 6
        %li
          %span.badge CONFIRM
  .row-fluid
    .span12{style: 'margin-bottom: 40px;'}
      = simple_form_for(@user, url: wizard_path, :html => {:class => 'form-horizontal' }) do |f|
        %h4 CATEGORY SELECTION
        %p Choose equipment, materials...
        - @equipment_categories = Category.where(category_type: 'Equipment')
        - @service_categories = Category.where(category_type: 'Service')

        %h5 EQUIPMENT CATEGORIES
        = hidden_field_tag "user[category_ids][]", nil
        - @equipment_categories.each do |equipment_category|
          = check_box_tag "user[category_ids]", equipment_category.id
          = label_tag dom_id(equipment_category), equipment_category.name
        %h5 SERVICE CATEGORIES
        - @service_categories.each do |service_category|
          = service_category.name



  .row-fluid
    .span12
      %h5 EQUIPMENT
      %p Please select products and services that your company manufactures or sells.

  = link_to 'Next', wizard_path(:step5), class: 'btn btn-primary pull-right'