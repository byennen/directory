.span12
  %h1.left Companies

%table.table.table-hover
  %thead
    %tr
      %th Contact name
      %th Company name
      %th City
      %th State
      %th Zip
      %th Country
      %th Phone
      %th Logo package
      %th
  %tbody
    - @companies.each do |company|
      %tr
        %td= company.contact_name
        %td= company.company_name
        %td= company.city
        %td= company.state
        %td= company.zip
        %td= company.country
        %td= company.phone_1
        %td= company.logo_package.name
        %td
          = link_to "edit", edit_company_path(company) if company.user == current_user 
.span12=paginate @companies