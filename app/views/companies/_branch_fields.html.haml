%fieldset
  .form-inputs
    .span12.left2= f.input :branch_name, input_html: {class: 'span5'}
    .span5= f.input :address_1, input_html: {class: 'span12'}
    .span5= f.input :address_2, input_html: {class: 'span12'}
    .span3= f.input :city, input_html: {class: 'span12'}
    .span3= f.input :state, input_html: {class: 'span12'}
    .span3= f.input :zip, input_html: {class: 'span12'}
    .control-group.span12
      .controls
        = country_select("company", "country", [ "United States" ])
    .span3= f.input :phone_1, input_html: {class: 'span12'}
    .span3= f.input :phone_2, input_html: {class: 'span12'}
    .span3= f.input :fax, input_html: {class: 'span12'}
    .control-group.span12
      .controls
        = f.hidden_field :_destroy
        = link_to "remove", '#', class: "remove_fields btn btn-inverse"
    %hr