%fieldset
  .form-inputs
    = f.input :branch_name, input_html: {class: 'span8'}, placeholder: 'Joe Foo'
    = f.input :address_1, input_html: {class: 'span8'}, placeholder: 'Joe Foo'
    = f.input :address_2, input_html: {class: 'span8'}, placeholder: 'Joe Foo'
    = f.input :city, input_html: {class: 'span8'}, placeholder: 'Joe Foo'
    = f.input :state, input_html: {class: 'span8'}, placeholder: 'Joe Foo'
    = f.input :zip, input_html: {class: 'span8'}, placeholder: 'Joe Foo'
    .control-group
      .controls
        = country_select("company", "country", [ "United States" ])
    = f.input :phone_1, input_html: {class: 'span8'}, placeholder: 'Joe Foo'
    = f.input :phone_2, input_html: {class: 'span8'}, placeholder: 'Joe Foo'
    = f.input :fax, input_html: {class: 'span8'}, placeholder: 'Joe Foo'
    = f.hidden_field :_destroy
    .control-group
      .controls
        = link_to "remove", '#', class: "remove_fields btn btn-inverse"
    %hr
