:css
  .navbar {
    margin-bottom: 0;
  }
  .navbar ul.inline > li, ol.inline > li {
    padding: 0;
  }
  .main-nav {
    position: relative;
    z-index: 1;
    maring: 0;
    font-weight: 800;
  }
  .main-nav ul {
    margin: 0 !important;
    padding: 0 !important;
  }
  .main-nav a {
    border-left: 15px solid #a3a3a3;
    background: black;
    margin: 0;
    padding: 15px 102px 15px 10px;
  }
  .main-nav a:hover, .main-nav li.active a {
    border-left: 15px solid #4fa4d0;
    background: #fff;
    color: #4fa4d0;
    text-decoration: none;
  }
  .main-nav a {
    color: white;
  }

